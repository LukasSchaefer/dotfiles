# Web function to open Websites
web(){

		if [ "$1" = "yt" ]; then
				open 'https://www.youtube.com/?gl=DE&hl=de'
				return
		fi

		if [ "$1" = "youtube" ]; then
				open 'https://www.youtube.com/?gl=DE&hl=de'
				return
		fi
		
}

# function to start livestreamer with twitch source
livestream(){
	echo "starting livestreamer http://twitch.tv/$1 source in second window..."
	 osascript -e 'tell application "Terminal" to do script "livestreamer http://twitch.tv/'$1' source"'
	#$(livestreamer http://twitch.tv/$1 'source' '&')
}